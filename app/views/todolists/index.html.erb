<h1>Books</h1>
<table>
<thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    </tr>
</thead>

<tbody>
     <% @books.each do |book| %>
     <tr>
     <td>
     <%= book.title %>
     </td>
     <td>
     <%= book.body %>
     </td>
     <td>
     <%= link_to "show", todolist_path(book.id) %>
     <%= link_to "edit", edit_todolist_path(book.id) %>
     <%= link_to "destroy", destroy_todolist_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %>
     </td>
     </tr>
     <% end %>
</tbody>
</table>
<h1>New book</h1>
<%= form_with model:@book, url:'/todolists', local:true do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>
<br><%= f.submit 'Create Book' %></br>

<% end %>